@{
    ViewBag.Title = "Formulaire";
}

<h1>@ViewBag.Message1</h1>
<h2>@ViewData["Message2"]</h2>
<img src="@ViewBag.ImgUrl", alt="Smiley" height="240" width="240"/><br />
@using (Html.BeginForm())
{
    @Html.Label("Nom")<br />
    @Html.TextBox("Nom")<br />
    @Html.Label("Email")<br />
    @Html.TextBox("Email")<br />
    @Html.Label("Commentaire")<br />
    @Html.TextArea("Commentaire")<br />  
    <button type = "submit">Submit</button>  
}